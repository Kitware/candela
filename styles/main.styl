.top-info-bar
  border-bottom 2px solid #eeeeee
  margin-bottom 5px

.info-title
  padding-left 10px
  position absolute
  font-size 24pt

.info-date
  position absolute
  width 100%
  text-align right
  font-size 24pt
  padding-right 10px

.info-branch
  width 100%
  font-size 24pt
  text-align center

.info-value
  float right

.info-section
  text-align center
  font-size 22pt

.info-section-chart
  height 55px

.info-pane, .trend-pane
  height 500px

.status-bar-chart
  svg
    width 100%
    height 100%
  height 13px
  padding-bottom 5px

.bullet-container
  svg
    height 55px

.dataset-name
  text-align center

.dataset-label
  color rgb(150, 150, 150)
  font-size 10pt
  text-align center
  font-family monospace

.result-labels
  text-align center
  font-size 16pt
  font-weight bold

svg.statusDot
  margin-top 11px
  width 20px
  height 20px
  position absolute

.agg-label
  width 4em

.agg-label, .agg-value
  font-size 16pt
  padding-top 9px

.agg-label-header
  padding-left 20px

.agg-sparkline-header
  text-align center

.agg-sparkline
  height 55px
  svg
    font-size 10pt

.agg-bullet
  height 55px

.agg-status-dot
  width 30px
  height 30px

  svg
    width 100%
    height 100%
    padding-top 2px

svg
  width 100%
  height 100%

  .success
    fill rgb(147, 196, 125)

  .bad
    fill rgb(241, 194, 50)

  .fail
    fill rgb(204, 0, 0)

  .none
    fill rgba(0, 0, 0, 0)

  .status-bar-label
    text-anchor middle

  g.nv-sparkline

    circle
      fill #555 !important
      stroke #555 !important

    path
      stroke-width 2px
      stroke #555 !important

