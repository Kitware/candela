.top-info-bar
  border-bottom 2px solid #eeeeee
  margin-bottom 5px
  display flex
  align-items center

  .info-help
    padding-left 10px
    padding-right 10px
    margin-top 5px
    align-self flex-start

.info-title
  padding-left 10px
  flex 1
  flex-grow 3
  font-size 22pt

.info-date
  font-size 18pt
  flex 1
  text-align right

.info-branch
  font-size 22pt
  flex 1
  flex-grow 3

.info-section
  text-align center
  font-size 22pt

.info-section-chart
  height 55px

.trend-pane
  height 500px

.trend-chart
  height 100%

.status-bar-chart
  svg
    width 100%
    height 100%
  height 13px
  padding-bottom 5px

.bullet-container
  svg
    height 55px

.dataset-name
  text-align center

.dataset-label
  color rgb(150, 150, 150)
  font-size 10pt
  text-align center
  font-family monospace

.result-labels
  text-align center
  font-size 14pt
  font-weight bold

svg.statusDot
  margin-top 11px
  width 20px
  height 20px
  position absolute

.agg-label
  width 4em

.agg-label, .agg-value
  font-size 16pt
  padding-top 9px

.agg-label-header
  padding-left 20px

.agg-sparkline-header
  text-align center

.agg-sparkline
  height 55px
  svg
    font-size 10pt

.agg-bullet
  height 55px

.agg-status-dot
  width 30px
  height 30px

  svg
    width 30px
    height 30px
    padding-top 2px

svg
  width 100%
  height 100%

  .success
    fill rgb(147, 196, 125)

  .bad
    fill rgb(241, 194, 50)

  .fail
    fill rgb(204, 0, 0)

  .incomplete
    fill rgb(28, 106, 133)

  .none
    fill rgba(0, 0, 0, 0)

  .status-bar-label
    text-anchor middle

  g.nv-sparkline

    circle
      fill #555 !important
      stroke #555 !important

    path
      stroke-width 2px
      stroke #555 !important

.trend-col-header-sortable
  display flex
  justify-content center
  align-items center

  abbr
    cursor pointer

svg.sort-column-icon
  width 40px
  height 20px
  cursor pointer
  margin-left 5px

  polygon
    fill #fff
    stroke #000
    stroke-width 2px

  polygon.active
      fill #4098B7

tr.key-metrics-row
  border-bottom 2px solid #eee

#key-metrics-title
  text-align center
  font-size 18pt
  font-weight bold
