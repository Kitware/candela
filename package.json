{
  "name": "candela",
  "version": "0.0.0-semantically-released",
  "description": "Visualization components for the web",
  "main": "dist/candela.js",
  "scripts": {
    "build": "webpack --config config/webpack.config.js",
    "build:examples": "cd examples; webpack",
    "examples": "http-server build/examples -p ${PORT-3000}",
    "build:test:unit": "cd tests; webpack",
    "test:unit": "karma start --log-level disable tests/karma-testing.conf.js | sed \"s/^'\\(.*\\)'$/\\1/\" | tap-spec",
    "test:unit:raw": "karma start tests/karma-testing.conf.js",
    "test:unit:debug": "karma start --log-level debug tests/karma-testing.conf.js",
    "test:image": "npm run test:image:raw | tap-spec",
    "test:image:raw": "result=true; npm run test:image:server:down; npm run test:image:server:up && find packages/ -name '*.image.js' | xargs -n 1 babel-node || result=false; npm run test:image:server:down; ${result}",
    "test:image:server:up": "sh script/test-server-up.sh >.server.log",
    "test:image:server:down": "sh script/test-server-down.sh",
    "build:test:coverage": "cd tests; webpack --config webpack-coverage.config.js",
    "test:coverage": "karma start tests/karma-coverage.conf.js",
    "coverage:report": "http-server build/coverage/html -p ${PORT-3000}",
    "coverage:codecov": "cat build/coverage/lcov/lcov.info | codecov",
    "build:resonantlab": "cd app/resonantlab && webpack",
    "build:resonantlab:tests": "webpack --config ./app/resonantlab/webpack-testing.config.js",
    "build:docs": "sphinx-build -a -b html docs/ build/docs/",
    "test:resonantlab:unit": "npm run test:resonantlab:unit:raw | tap-spec",
    "test:resonantlab:unit:raw": "for t in `ls build/resonantlab/*.tests.js`; do node $t; done",
    "dist": "webpack --config config/webpack-production.config.js && webpack --config config/webpack-production-minify.config.js",
    "lint": "semistandard | snazzy",
    "lint:pycandela": "flake8 --config python/pycandela/flake8.cfg python/pycandela",
    "docs": "http-server build/docs -p ${PORT-3000}",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg"
  },
  "semistandard": {
    "ignore": [
      "config",
      "app/resonantlab",
      "dist",
      "build",
      "R/candela/inst/htmlwidgets/lib"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitware/candela.git"
  },
  "author": "Roni Choudhury",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-core": "^6.24.1",
    "babel-istanbul-loader": "^0.1.0",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "bluebird": "^3.3.5",
    "bootstrap": "^3.3.7",
    "bootstrap-webpack": "0.0.6",
    "callsite": "^1.0.0",
    "candela": "file:.",
    "candela-geojs": "file:./packages/candela-geojs",
    "candela-glo": "file:./packages/candela-glo",
    "candela-lineup": "file:./packages/candela-lineup",
    "candela-onset": "file:./packages/candela-onset",
    "candela-sententree": "file:./packages/candela-sententree",
    "candela-similaritygraph": "file:./packages/candela-similaritygraph",
    "candela-trackerdash": "file:./packages/candela-trackerdash",
    "candela-treeheatmap": "file:./packages/candela-treeheatmap",
    "candela-upset": "file:./packages/candela-upset",
    "candela-vega": "file:./packages/candela-vega",
    "clean-webpack-plugin": "^0.1.7",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.8.6",
    "condition-circle": "^1.5.0",
    "conventional-commit-types": "^2.1.0",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.28.4",
    "cz-conventional-changelog": "^1.2.0",
    "d3": "^3.5.17",
    "d3-selection": "^1.1.0",
    "datalib": "^1.7.3",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-standard": "^1.3.2",
    "exports-loader": "^0.6.4",
    "font-awesome-webpack": "0.0.5-beta.2",
    "geojs": "^0.9.1",
    "glo": "github:ronichoudhury-work/glo#dist",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "http-server": "^0.9.0",
    "husky": "^0.11.8",
    "imports-loader": "^0.7.1",
    "jade": "^1.11.0",
    "jade-loader": "^0.8.0",
    "javascript-detect-element-resize": "^0.5.3",
    "jquery": "^2.2.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.22",
    "karma-coverage": "^0.5.5",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-quiet-reporter": "^0.1.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-tap": "^1.0.4",
    "karma-webpack": "^1.7.0",
    "less": "^2.7.2",
    "lineupjs": "^1.1.1",
    "md5": "^2.2.1",
    "nightmare": "^2.3.1",
    "node-resemble": "^1.1.3",
    "node-sass": "^4.5.3",
    "nvd3": "^1.8.5",
    "onset": "git+https://github.com/Kitware/setvis#b2b8e7cfdef335a4ee4b2af871e14d203ef3e754",
    "phantomjs": "^1.8",
    "phantomjs-prebuilt": "^2.1.5",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.5",
    "semantic-release": "^4.3.5",
    "semistandard": "^7.0.5",
    "sententree": "git+https://git@github.com/ronichoudhury-work/sententree.git#fix-typo",
    "snazzy": "^4.0.0",
    "strip-json-comments": "^2.0.1",
    "strip-json-comments-loader": "0.0.2",
    "style-loader": "^0.18.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "tape": "^4.6.3",
    "tape-catch": "^1.0.6",
    "tap-spec": "^4.1.1",
    "telegraph-events": "^1.0.3",
    "underscore": "^1.8.3",
    "UpSet": "git+https://github.com/jeffbaumes/upset#no-global-vars",
    "url-loader": "^0.5.8",
    "validate-commit-msg": "^2.8.2",
    "vega": "^2.4.2",
    "webcola": "^3.3.3",
    "webpack": "^1.15.0"
  },
  "peerDependencies": {
    "babel-loader": "^6.2.1",
    "bootstrap": "^3.3.7",
    "css-loader": "^0.23.1",
    "jade": "^1.11.0",
    "jade-loader": "^0.8.0",
    "javascript-detect-element-resize": "^0.5.3",
    "style-loader": "^0.13.0",
    "stylus-loader": "^2.0.0",
    "telegraph-events": "^1.0.3",
    "url-loader": "^0.5.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "This project is commitizen-friendly.\nLearn more at https://commitizen.github.io/cz-cli/https://commitizen.github.io/cz-cli/\nTo try again, you can say \"git commit -t .git/COMMIT_EDITMSG\".\nOr, you can use git-cz to make your commits."
    }
  },
  "release": {
    "verifyConditions": "condition-circle"
  }
}
